<Window x:Class="F1Predictions.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:F1Predictions"
        mc:Ignorable="d"
        FontFamily="Calibri"
        Title="F1 Predictions 2021" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181730"
        WindowStartupLocation="CenterScreen" d:DataContext="{d:DesignInstance}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Row 0 -->
        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{Binding ToolbarRegionName, Mode=OneTime}"/>
    </Grid>
</Window>
